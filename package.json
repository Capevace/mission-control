{
  "name": "@capevace/mission-control",
  "version": "0.1.1",
  "description": "The mission control server for HAL6900.",
  "main": "app/index.js",
  "scripts": {
    "start": "node scripts/start.js",
    "lint": "eslint app",
    "docs-tutorials-for-later": "jsdoc -r app -d docs -c jsdoc.config.js -u tutorials --package ./package.json ",
    "docs": "jsdoc -d docs -c jsdoc.config.js -r app ./README.md",
    "ui": "cp -r ../mission-control-dashboard/dist/production/. resources/dashboard-ui/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/capevace/hal-6900-mission-control.git"
  },
  "bin": {
    "mission-control": "scripts/start.js"
  },
  "author": "Lukas Mateffy (@Capevace)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/capevace/hal-6900-mission-control/issues"
  },
  "homepage": "https://github.com/capevace/hal-6900-mission-control#readme",
  "dependencies": {
    "@oznu/hap-client": "^1.6.0",
    "chalk": "^2.4.2",
    "commander": "^6.1.0",
    "db-hafas": "^5.0.2",
    "eventemitter2": "^5.0.1",
    "express": "^4.16.4",
    "express-session": "^1.16.1",
    "http-proxy-middleware": "^0.20.0",
    "module-alias": "^2.2.0",
    "object-diff": "0.0.4",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "public-ip": "^3.0.0",
    "querystring": "^0.2.0",
    "rc": "^1.2.8",
    "socket.io": "^2.2.0",
    "socketio-auth": "^0.1.1",
    "superagent": "^5.0.2",
    "systeminformation": "^4.1.5",
    "uuid": "^3.3.2"
  },
  "_moduleAliases": {
    "@root": "app",
    "@config": "app/config",
    "@database": "app/database",
    "@state": "app/state",
    "@helpers": "app/helpers",
    "@services": "app/services"
  },
  "devDependencies": {
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-prettier": "^3.1.0",
    "jsdoc": "^3.6.3"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "commonjs": true,
      "es6": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "rules": {
      "linebreak-style": [
        "error",
        "unix"
      ],
      "semi": [
        "error",
        "always"
      ]
    }
  },
  "directories": {
    "doc": "docs"
  }
}
