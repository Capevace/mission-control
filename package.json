{
	"name": "@capevace/mission-control",
	"version": "2.0.0-rc16",
	"description": "Beautiful smart home dashboard software built on Node.js.",
	"main": "app/index.js",
	"scripts": {
		"start": "node start.js",
		"debug": "ndb node start.js --debug",
		"code:lint": "eslint app",
		"docs:serve": "docma serve docs -c ./.config/docma.config.json",
		"docs:build": "node scripts/docs.js",
		"dashboard:update": "cp -r ../mission-control-dashboard/dist/production/. resources/dashboard-ui/",
		"spotify-ui:update": "cp -r ../mission-control-spotify/dist/. resources/spotify-ui/",
		"mobile-ui:build": "babel resources/dashboard-ui/index.js --out-file resources/dashboard-ui/mobile.js",
		"docs-tutorials-for-later": "jsdoc -r app -d docs -c jsdoc.config.js -u tutorials --package ./package.json ",
		"docs-old": "jsdoc -d docs -c jsdoc.config.js -r app ./README.md"
	},
	"browserslist": "defaults, last 1 version, >1%, ios_saf 9, ios_saf 9.3",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/capevace/mission-control.git"
	},
	"bin": {
		"mission-control": "start.js"
	},
	"author": "Lukas Mateffy (@Capevace)",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/capevace/mission-control/issues"
	},
	"homepage": "https://mission-control.js.org",
	"dependencies": {
		"@oznu/hap-client": "^1.6.0",
		"accesscontrol": "^2.2.1",
		"auto-bind": "^4.0.0",
		"bcrypt": "^5.0.1",
		"body-parser": "^1.18.3",
		"chalk": "^2.4.2",
		"cli-progress": "^3.9.0",
		"commander": "^6.1.0",
		"connect-flash": "^0.1.1",
		"cookie-session": "^1.4.0",
		"db-hafas": "^5.0.2",
		"eventemitter2": "^5.0.1",
		"express": "^5.0.0-alpha.8",
		"express-joi-validation": "^5.0.0",
		"html-minifier": "^4.0.0",
		"http-proxy-middleware": "^0.20.0",
		"internal-ip": "^6.1.0",
		"joi": "^17.4.0",
		"jsonwebtoken": "^8.5.1",
		"module-alias": "^2.2.0",
		"nuxt": "^2.15.7",
		"object-diff": "0.0.4",
		"on-change": "^3.0.2",
		"on-finished": "^2.3.0",
		"passport": "^0.4.0",
		"passport-jwt": "^4.0.0",
		"passport-local": "^1.0.0",
		"public-ip": "^3.0.0",
		"qrcode-terminal": "^0.12.0",
		"querystring": "^0.2.0",
		"rc": "^1.2.8",
		"session-file-store": "^1.5.0",
		"socket.io": "^4.0.0",
		"socketio-auth": "^0.1.1",
		"superagent": "^5.0.2",
		"systeminformation": "^5.6.12",
		"uuid": "^3.3.2"
	},
	"devDependencies": {
		"@babel/cli": "^7.11.5",
		"@babel/core": "^7.11.5",
		"@babel/eslint-parser": "^7.14.7",
		"@babel/preset-env": "^7.11.5",
		"@csstools/postcss-sass": "^4.0.0",
		"@nuxt/postcss8": "^1.1.3",
		"@nuxt/types": "^2.15.7",
		"@nuxt/typescript-build": "^2.1.0",
		"@nuxtjs/eslint-config-typescript": "^6.0.1",
		"@nuxtjs/eslint-module": "^3.0.2",
		"@nuxtjs/tailwindcss": "^4.2.1",
		"autoprefixer": "^10.3.3",
		"docma": "^3.2.2",
		"docma-template-mission-control": "^1.0.0",
		"esdoc": "^1.1.0",
		"esdoc-brand-plugin": "^1.0.1",
		"esdoc-custom-theme": "^1.4.2",
		"esdoc-ecmascript-proposal-plugin": "^1.0.0",
		"esdoc-inject-style-plugin": "^1.0.0",
		"esdoc-publish-html-plugin": "^1.1.2",
		"esdoc-standard-plugin": "^1.0.0",
		"eslint": "^7.29.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-import": "^2.17.2",
		"eslint-plugin-nuxt": "^2.0.0",
		"eslint-plugin-prettier": "^3.1.0",
		"eslint-plugin-vue": "^7.12.1",
		"fibers": "^5.0.0",
		"jsdoc": "^3.6.3",
		"ndb": "^1.1.5",
		"postcss": "^8.3.6",
		"postcss-import": "^12.0.1",
		"postcss-scss": "^4.0.0",
		"prettier": "^2.3.2",
		"sass": "^1.38.2",
		"sass-loader": "^10.1.1",
		"tailwindcss": "^2.2.9"
	},
	"eslintConfig": {
		"env": {
			"node": true,
			"commonjs": true,
			"es6": true
		},
		"extends": [
			"eslint:recommended",
			"prettier"
		],
		"globals": {
			"Atomics": "readonly",
			"SharedArrayBuffer": "readonly"
		},
		"parserOptions": {
			"ecmaVersion": 2018
		},
		"rules": {
			"linebreak-style": [
				"error",
				"unix"
			],
			"semi": [
				"error",
				"always"
			]
		}
	},
	"directories": {
		"doc": "docs"
	},
	"_moduleAliases": {
		"@root": "./",
		"@config": "app/config",
		"@database": "app/database",
		"@sync": "app/sync",
		"@helpers": "app/helpers",
		"@services": "app/services",
		"@http": "app/http",
		"@models": "app/models"
	}
}
